@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using BADProject.Domain.Entities
@model List<Anime>

@{
    ViewData["Title"] = "My Watch List";
}

<h1>@ViewData["Title"]</h1>

<div class="container mt-3">
    <div class="row">
        @foreach (var anime in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card anime-card">
                    <img src="@Url.Content("~/Images/" + anime.ImageURL)" alt="Image for @anime.Title" class="card-img-top">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title">@anime.Title</h5>
                                <form asp-action="RemoveFromWatchList" asp-controller="AnimeList" asp-route-id="@anime.Id" method="post">
                                    <button type="submit" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                        </div>
                        <p class="card-text">@anime.Description</p>
                        <a asp-controller="Anime" asp-action="Review" asp-route-id="@anime.Id">Check the reviews!</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
